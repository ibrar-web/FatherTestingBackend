{
  "name": "feathers-backend",
  "version": "1.0.0",
  "type": "module",
  "main": "src/app.js",
  "scripts": {
    "start": "node src/app.js",
    "dev": "node --watch src/app.js",
    "test": "mocha test/**/*.test.js --timeout 10000",
    "test:watch": "mocha test/**/*.test.js --watch",
    "test:coverage": "nyc mocha test/**/*.test.js",
    "lint": "eslint src/ --ext .js",
    "lint:fix": "eslint src/ --ext .js --fix",
    "docker:build": "docker build -t feathers-backend .",
    "docker:run": "docker run -p 3031:3031 feathers-backend",
    "docker:dev": "docker-compose up --build"
  },
  "keywords": [
    "feathers",
    "backend",
    "api"
  ],
  "author": "",
  "license": "ISC",
  "description": "Feathers backend application",
  "dependencies": {
    "@feathersjs/express": "^5.0.34",
    "@feathersjs/feathers": "^5.0.34",
    "@feathersjs/memory": "^5.0.34",
    "@feathersjs/socketio": "^5.0.34",
    "cors": "^2.8.5"
  },
  "devDependencies": {
    "mocha": "^10.2.0",
    "axios": "^1.6.0",
    "nyc": "^15.1.0",
    "eslint": "^8.55.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^6.1.1"
  }
}
